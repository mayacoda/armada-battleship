{
  "name": "armada-js-battleship",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "version": "0.1.0",
  "description": "Armada JS battleship game",
  "repository": "https://github.com/mayacoda/armada-battleship",
